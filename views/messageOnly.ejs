<div
  class="flex flex-col items-center justify-center text-center p-8 mt-12 bg-white rounded-lg shadow max-w-lg mx-auto"
>
  <h2 class="text-2xl font-semibold text-gray-800 mb-4">Oops!</h2>
  <p class="text-gray-600 mb-6"><%= content.message.text %></p>

  <div class="flex gap-4">
    <% content.message.actions.forEach(action => { %>
    <a
      href="<%= action.href %>"
      class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition"
    >
      <%= action.label %>
    </a>
    <% }) %>
  </div>
</div>
