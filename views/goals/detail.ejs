<% const {tasks, selectedGoal} = content %>
<div class="bg-gray-100 flex flex-col items-center py-10 px-4">
  <section class="w-full max-w-3xl space-y-8">
    <article class="bg-white rounded-lg shadow p-6 overflow-hidden">
      <header class="mb-4">
        <h1
          class="text-2xl font-semibold text-gray-800 mb-1 break-words whitespace-normal"
        >
          <%= selectedGoal.title %>
        </h1>
        <p class="text-sm text-gray-500 break-words whitespace-normal">
          <%= selectedGoal.created_at.toLocaleString('en-US', { month: 'long',
          day: 'numeric', year: 'numeric' }) %>
        </p>
      </header>

      <p class="text-gray-700 mb-6 break-words">
        <%= selectedGoal.description %>
      </p>

      <!-- Action Buttons -->
      <div class="flex gap-3">
        <a href="/goals/<%= selectedGoal.id %>/form">
          <button
            class="px-4 py-2 bg-green-600 text-white text-sm rounded hover:bg-green-700 transition cursor-pointer"
          >
            Edit
          </button>
        </a>
        <form action="/goals/<%= selectedGoal.id %>/delete" method="post">
          <button
            type="submit"
            class="px-4 py-2 bg-red-600 text-white text-sm rounded hover:bg-red-700 transition cursor-pointer"
          >
            Delete
          </button>
        </form>
      </div>
    </article>

    <%- include('../tasks/card', { tasks }) %>
  </section>
</div>
