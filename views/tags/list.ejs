<% const {tags} = content %>
<div class="bg-gray-100 flex flex-col items-center py-10 px-4">
  <div class="w-full max-w-2xl">
    <!-- Sub Header -->
    <div class="flex items-center justify-between mb-6">
      <span class="text-base text-gray-500">/Tags</span>

      <a href="/tags/form">
        <button
          class="px-4 py-2 text-sm bg-blue-600 text-white rounded hover:bg-blue-700 transition cursor-pointer"
        >
          Add Tag
        </button>
      </a>
    </div>

    <!-- Tag List -->
    <div class="space-y-4">
      <% if (tags.length === 0) { %>
      <p class="text-center text-gray-500 italic">
        No tags yet. Click "Add Tag" to create one.
      </p>
      <% } else { %> <% tags.forEach((tag) => { %>
      <div
        class="bg-white shadow rounded-lg p-4 flex justify-between items-center"
      >
        <!-- Tag Name -->
        <div
          class="text-base font-medium text-gray-800 hover:text-blue-600 transition-all relative group"
        >
          <a href="/tags/<%= tag.id %>" class="hover:underline">
            <%= tag.name %>
          </a>
          <span
            class="absolute bottom-full mb-1 hidden group-hover:block bg-black text-white text-xs px-2 py-1 rounded text-nowrap"
            >Open Tag</span
          >
        </div>

        <!-- Actions -->
        <div class="flex items-center gap-2 ml-4">
          <form action="/tags/<%= tag.id %>/form" method="get">
            <div class="relative group">
              <button
                type="submit"
                class="p-2 hover:bg-green-200 rounded-md transition cursor-pointer"
                aria-label="Edit <%= tag.name %>"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-5 h-5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M16.862 3.487a2.25 2.25 0 1 1 3.182 3.182L7.5 19.213l-4.5 1.5 1.5-4.5 12.362-12.726z"
                  />
                </svg>
              </button>
              <span
                class="absolute bottom-full mb-1 hidden group-hover:block bg-black text-white text-xs px-2 py-1 rounded"
                >Edit</span
              >
            </div>
          </form>
          <form action="/tags/<%= tag.id %>/delete" method="post">
            <div class="relative group">
              <button
                type="submit"
                class="p-2 hover:bg-red-200 rounded-md transition cursor-pointer"
                aria-label="Edit <%= tag.name %>"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-5 h-5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M6 18L18 6M6 6l12 12"
                  />
                </svg>
              </button>
              <span
                class="absolute bottom-full mb-1 hidden group-hover:block bg-black text-white text-xs px-2 py-1 rounded"
                >Delete</span
              >
            </div>
          </form>
        </div>
      </div>
      <%})};%>
    </div>
  </div>
</div>
