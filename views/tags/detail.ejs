<% const {tasks, selectedTag} = content %>
<div class="bg-gray-100 flex flex-col items-center py-10 px-4">
  <section class="w-full max-w-3xl space-y-8">
    <!-- Tag Header -->
    <div class="bg-white p-6 rounded-lg shadow">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <h1 class="text-2xl font-semibold text-gray-800 mb-4 sm:mb-0">
          <%= selectedTag.name %>
        </h1>

        <div class="flex gap-3">
          <a href="/tags/<%= selectedTag.id %>/form">
            <button
              class="px-4 py-2 bg-green-600 text-white text-sm rounded hover:bg-green-700 transition cursor-pointer"
            >
              Edit
            </button>
          </a>
          <form action="/tags/<%= selectedTag.id %>/delete" method="post">
            <button
              type="submit"
              class="px-4 py-2 bg-red-600 text-white text-sm rounded hover:bg-red-700 transition cursor-pointer"
            >
              Delete
            </button>
          </form>
        </div>
      </div>
    </div>

    <%- include('../tasks/card', { tasks }) %>
  </section>
</div>
