<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles/build.css" />
  </head>
  <body class="min-h-screen flex flex-col bg-gray-100">
    <%- include('../partials/header') %>

    <div class="main flex-grow">
      <div class="content-wrapper">
        <% const contentType = { goals: "../goals/list", goalForm:
        "../goals/form", tags: "../tags/list", tagForm: "../tags/form", task:
        "../tasks/view", taskForm: "../tasks/form", profile: "../profile",
        messageOnly: "../messageOnly" }[content.type]; %> <%-
        include(contentType, { content }) %>
      </div>
    </div>

    <%- include('../partials/footer') %>
  </body>
</html>
