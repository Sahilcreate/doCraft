<% const {task} = content %>
<div class="main-container flex items-center justify-center p-6">
  <div class="w-full max-w-2xl bg-white p-6 rounded-lg shadow-md space-y-4">
    <h2 class="text-2xl font-semibold text-gray-800 border-b pb-2">
      <%= task.task_title %>
    </h2>

    <% if (task.task_description) { %>
    <p class="text-gray-700"><%= task.task_description %></p>
    <% } %>

    <div class="space-y-2 text-sm text-gray-700">
      <% if (task.goal.id) { %>
      <div><span class="font-semibold">Goal:</span> <%= task.goal.title %></div>
      <% }; %>

      <div>
        <span class="font-semibold">Due Date:</span>
        <%= task.due_date.toLocaleString('en-US', { month: 'long', day:
        'numeric', year: 'numeric' }) %>
      </div>
      <div>
        <span class="font-semibold">Created At:</span>
        <%= task.created_at.toLocaleString('en-US', { month: 'long', day:
        'numeric', year: 'numeric' }) %>
      </div>
    </div>

    <% if (task.tags.length) { %>
    <div>
      <span class="font-semibold text-sm text-gray-700">Tags:</span>
      <div class="flex flex-wrap gap-2 mt-1">
        <% task.tags.forEach(tag => { %>
        <span
          class="bg-blue-100 text-blue-700 px-2 py-0.5 rounded-full text-xs"
        >
          <%= tag.name %>
        </span>
        <% }) %>
      </div>
    </div>
    <% } %>

    <div class="flex gap-4 pt-4">
      <a href="/tasks/<%= task.task_id %>/form">
        <button
          class="px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 text-sm cursor-pointer"
        >
          Edit
        </button>
      </a>
      <form action="/tasks/<%= task.task_id %>/delete" method="post">
        <button
          type="submit"
          class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 text-sm cursor-pointer"
        >
          Delete
        </button>
      </form>
    </div>
  </div>
</div>
